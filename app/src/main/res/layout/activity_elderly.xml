<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0b0ec"
    tools:context=".ElderlyActivity">


    <Button
        android:id="@+id/button_create_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Create New Task"
        android:textColor="#000000"
        android:background="#b0ceec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:id="@+id/layout_task1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_task2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_task1"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_task3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_task2"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button_clear_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#b0ceec"
        android:text="@string/clear_task"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="149dp" />

    <TextView
        android:id="@+id/textView_loc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="165dp" />

    <TextView
        android:id="@+id/textView_task3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="149dp" />

    <Button
        android:id="@+id/button_clear_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#b0ceec"
        android:text="@string/clear_task"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="87dp" />

    <TextView
        android:id="@+id/textView_loc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="106dp" />

    <TextView
        android:id="@+id/textView_task2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="87dp" />

    <Button
        android:id="@+id/button_clear_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#b0ceec"
        android:text="@string/clear_task"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="30dp" />

    <TextView
        android:id="@+id/textView_loc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/textView_task1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="30dp" />


</androidx.constraintlayout.widget.ConstraintLayout>