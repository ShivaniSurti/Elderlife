<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0b0ec"
    tools:context=".ElderlyActivity">


    <Button
        android:id="@+id/button_create_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Create New Task"
        android:textColor="#000000"
        android:background="#b0ceec"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:id="@+id/layout_task1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_task2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_task1"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_task3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_task2"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button_clear_3"
        android:layout_width="116dp"
        android:layout_height="64dp"
        android:background="#b0ceec"
        android:text="@string/clear_task"
        tools:layout_editor_absoluteX="294dp"
        tools:layout_editor_absoluteY="279dp" />

    <TextView
        android:id="@+id/textView_loc3"
        android:layout_width="263dp"
        android:layout_height="27dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="313dp" />

    <TextView
        android:id="@+id/textView_task3"
        android:layout_width="263dp"
        android:layout_height="30dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="279dp" />

    <Button
        android:id="@+id/button_clear_2"
        android:layout_width="119dp"
        android:layout_height="59dp"
        android:background="#b0ceec"
        android:text="@string/clear_task"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="181dp" />

    <TextView
        android:id="@+id/textView_loc2"
        android:layout_width="266dp"
        android:layout_height="26dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="206dp" />

    <TextView
        android:id="@+id/textView_task2"
        android:layout_width="265dp"
        android:layout_height="21dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="184dp" />

    <Button
        android:id="@+id/button_clear_1"
        android:layout_width="112dp"
        android:layout_height="62dp"
        android:background="#b0ceec"
        android:text="@string/clear_task"
        tools:layout_editor_absoluteX="295dp"
        tools:layout_editor_absoluteY="84dp" />

    <TextView
        android:id="@+id/textView_loc1"
        android:layout_width="274dp"
        android:layout_height="21dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="127dp" />

    <TextView
        android:id="@+id/textView_task1"
        android:layout_width="267dp"
        android:layout_height="25dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="100dp" />


</androidx.constraintlayout.widget.ConstraintLayout>