<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0b0ec"
    android:orientation="vertical"
    tools:context=".YoungActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        android:id="@+id/layout_young_1"
        android:layout_weight="1"
        >


        <TextView
            android:id="@+id/textView_young_task1"
            android:layout_gravity="center"
            android:layout_width="352dp"
            android:layout_height="32dp"
            android:text="Accompany to Talk to"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_young_loc1"
            android:layout_gravity="center"
            android:layout_width="353dp"
            android:layout_height="27dp"
            android:text="Philadelphia, PA" />

        <Button
            android:id="@+id/button_young_clear_1"
            android:layout_gravity="center"
            android:layout_width="356dp"
            android:layout_height="75dp"
            android:background="#b0ceec"
            android:text="@string/clear_task" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_young_2"
        android:layout_weight="1"
        android:visibility="invisible"
        >


        <TextView
            android:id="@+id/textView_young_task2"
            android:layout_width="352dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:text="Accompany to Talk to"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_young_loc2"
            android:layout_width="353dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:text="Philadelphia, PA" />

        <Button
            android:id="@+id/button_young_clear_2"
            android:layout_width="356dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="#b0ceec"
            android:text="@string/clear_task" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_young_3"
        android:layout_weight="1"
        android:visibility="invisible"
        >


        <TextView
            android:id="@+id/textView_young_task3"
            android:layout_width="352dp"
            android:layout_gravity="center"
            android:layout_height="32dp"
            android:text="Accompany to Talk to"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_young_loc3"
            android:layout_gravity="center"
            android:layout_width="353dp"
            android:layout_height="27dp"
            android:text="Philadelphia, PA" />

        <Button
            android:id="@+id/button_young_clear_3"
            android:layout_gravity="center"
            android:layout_width="356dp"
            android:layout_height="75dp"
            android:background="#b0ceec"
            android:text="@string/clear_task" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See Available Tasks"
        android:layout_weight="1"
        android:onClick="seeTasks"
        android:background="#b0ceec"
        android:id="@+id/button_see_tasks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </Button>




</LinearLayout>